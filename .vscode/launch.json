    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tree-statistics'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tree-statistics",
                    "--package=tree-statistics"
                ],
                "filter": {
                    "name": "tree-statistics",
                    "kind": "bin"
                }
            },
            "args": ["-d", "resources/workloads/sentiment_sorted.bracket", "lower-bound", "-q", "resources/workloads/sentiment_query_sample.csv", "--output", "resources/results/sentiment/"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'tree-statistics'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=tree-statistics",
                    "--package=tree-statistics"
                ],
                "filter": {
                    "name": "tree-statistics",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}